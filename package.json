{
  "name": "@orion-ui/root",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": "24.1.0",
    "bun": "1.3.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "test": "bun run --filter '*' test",
    "test:coverage": "bun run --filter '*' test:coverage",
    "test:ci": "bun run --filter '*' test:ci",
    "test:e2e": "playwright test",
    "lint": "bun run eslint . && bun run --filter '*' lint",
    "lint:fix": "bun run eslint . --fix && bun run --filter '*' lint:fix",
    "type-check": "bun run --filter '*' type-check",
    "release": "changeset publish",
    "postinstall": "bun run type-check && bun run lint"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@changesets/cli": "^2.29.8",
    "@eslint/css": "^0.14.1",
    "@playwright/test": "^1.50.0",
    "@poupe/eslint-plugin-tailwindcss": "^0.2.4",
    "@types/bun": "latest",
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "@types/node": "^22.1.0",
    "eslint": "^9.19.0",
    "eslint-plugin-format": "^1.1.0",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-storybook": "^10.1.11",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "playwright": "^1.50.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.16"
  },
  "resolutions": {
    "vite": "7.3.0"
  }
}
