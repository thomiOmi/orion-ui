{
  "name": "@orion-ui/theme",
  "type": "module",
  "version": "0.0.0",
  "description": "Core design tokens and styles for Orion UI",
  "exports": {
    ".": "./src/style.css",
    "./css": "./src/style.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "bun x --bun @tailwindcss/cli -i src/style.css -o dist/style.css --watch",
    "build": "bun x --bun @tailwindcss/cli -i src/style.css -o dist/style.css",
    "lint": "bun run eslint .",
    "lint:fix": "bun run eslint . --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "tailwindcss": "4.1.18"
  },
  "devDependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@storybook/vue3-vite": "^10.1.11",
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "culori": "^4.0.2",
    "storybook": "^10.1.11",
    "vite": "^7.3.0",
    "vue": "^3.5.26"
  }
}
